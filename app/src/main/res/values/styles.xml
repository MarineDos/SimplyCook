<resources>

    <!-- Base application theme. -->
    <style name="SimplyCook" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SimplyCook.noActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SimplyCook.mainBackground">
        <item name="android:background">@drawable/background_bis</item>
    </style>

    <style name="SimplyCook.landscape">
    </style>

    <style name="SimplyCook.landscape.mainBackground">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="SimplyCook.title">
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>


    <!-- button -->
    <style name="SimplyCook.button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SimplyCook.buttonMargin" parent="SimplyCook.button">
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
