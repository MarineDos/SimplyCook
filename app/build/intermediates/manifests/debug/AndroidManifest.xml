<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="simplycook.marinedos.com.simplycook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SimplyCook" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="simplycook.marinedos.com.simplycook.ConnectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="simplycook.marinedos.com.simplycook.CreateAccountActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="simplycook.marinedos.com.simplycook.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="simplycook.marinedos.com.simplycook.ProfilActivity"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name="simplycook.marinedos.com.simplycook.FavorisActivity"
            android:label="@string/title_activity_favoris" >
        </activity>
        <activity
            android:name="simplycook.marinedos.com.simplycook.ComparaisonActivity"
            android:label="@string/title_activity_comparaison" >
        </activity>
        <activity
            android:name="simplycook.marinedos.com.simplycook.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>